// tsconfig.json
{
  "compilerOptions": {
    // "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "config"]
  },
  "include": ["types/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
